// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Box {
  id   String @id @default(uuid())
  name String

  lastDump  DateTime?
  items     Item[]
  itemDumps ItemDump[]
}

model Item {
  id        String  @id @default(uuid())
  submitter String?
  body      String

  Box        Box?      @relation(fields: [boxId], references: [id])
  boxId      String?
  ItemDump   ItemDump? @relation(fields: [itemDumpId], references: [id])
  itemDumpId String?
}

model ItemDump {
  id    String @id @default(uuid())
  items Item[]

  Box   Box?    @relation(fields: [boxId], references: [id])
  boxId String?
}
